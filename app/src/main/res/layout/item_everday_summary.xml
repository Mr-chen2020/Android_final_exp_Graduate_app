<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/item_everyday_summmary_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        android:layout_marginStart="6dp"
        app:cardBackgroundColor="@color/app_color_theme_6"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:contentPadding="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/item_everyday_summmary_textView_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColorHint="@color/check_bg"
                 />

            <com.xuexiang.xui.widget.textview.autofit.AutoFitTextView
                android:id="@+id/item_everyday_summmary_textView_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_everyday_summmary_textView_date"
                android:layout_alignParentRight="true"
                android:textColorHint="@color/check_bg"
                 />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>