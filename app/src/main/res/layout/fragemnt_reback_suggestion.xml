<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.cardview.widget.CardView
        android:id="@+id/reback_cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/gray_icon"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp"
        app:contentPadding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/introduceAnima"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <EditText
            android:id="@+id/reback_testView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="非常欢迎你热情的反馈哦"
            />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reback_button"
                android:layout_toRightOf="@+id/reback_testView"
                android:text="确定"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</FrameLayout>