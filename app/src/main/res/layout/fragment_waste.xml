<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/laji_cardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/gray_icon"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            app:contentPadding="8dp"
            app:layout_constraintTop_toBottomOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/laji_testView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="输入你要查询的物品名即可" />

                <Button
                    android:id="@+id/laji_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/laji_testView"
                    android:text="确定" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/laji_cardView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/gray_icon"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            app:contentPadding="8dp"
            android:alpha="0.9"
            app:layout_constraintTop_toBottomOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <MultiAutoCompleteTextView
                    android:id="@+id/laji_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="查询结果"
                    android:lines="6" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/laji_cardView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/gray_icon"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            app:contentPadding="8dp"
            android:alpha=".9"
            app:layout_constraintTop_toBottomOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <MultiAutoCompleteTextView
                    android:id="@+id/laji_say"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="6"
                    android:text="名称	说明\n
aim	查询出来的匹配结果\n
goodsName	物品名称\n
goodsType	物品垃圾分类类型\n
recommendList	推荐查询结果" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/laji_cardView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/gray_icon"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            app:contentPadding="8dp"
            app:layout_constraintTop_toBottomOf="parent">

            <Button
                android:id="@+id/laji_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关闭" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</FrameLayout>